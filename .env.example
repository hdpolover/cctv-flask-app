# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# Server settings
HOST=0.0.0.0
PORT=5000

# Video capture settings
VIDEO_PATH=0  # Use 0 for default camera, or RTSP URL for IP camera
FRAME_RATE=30
RESOLUTION=640,480

# Detection model settings
SCORE_THRESHOLD=0.8
IOU_THRESHOLD=0.3
TRACKING_THRESHOLD=50

# Firebase configuration (if using custom path)
FIREBASE_CREDS_PATH=/path/to/firebase-credentials.json